<body>
	<p id="notice"><%= flash[:delete] %></p>
	<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan=3></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |books| %>
				<tr>
					<td>
						<%= books.title %>
					</td>
					<td>
						<%= books.body %>
					</td>
					<td>
						<%= link_to "Show", post_path(books.id) %>
					</td>
					<td>
						<%= link_to "Edit", edit_path(books.id) %>
					</td>
					<td>
						<%= link_to "Destroy",destroy_path(books.id),method: :delete, "data-confirm" => "本当に削除しますか？" %>   
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<h2>New book</h2>
	<%= form_for(@book)do|f| %>
		<div class="field">
			<label>Title</label>
			<%= f.text_field :title %>
		</div>
		<div class="field">
  			<label>Body</label>
			<%= f.text_area :body %>
		</div>
		<div class="field">
			<%= f.submit "Create Book" %>
		</div>
	<% end %>
</body>